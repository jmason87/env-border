{
    "manifest_version": 3,
    "name": "Env Border",
    "version": "1.0",
    "description": "Add a colored border to your site's different environments",
    "permissions": ["activeTab", "scripting", "storage"],
    "action": {
        "default_popup": "popup.html",
        "icons": {
            "16": "images/env-border-icon16.jpeg",
            "48": "images/env-border-icon48.jpg",
            "128": "images/env-border-icon128.jpg"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["contentScript.js"],
        "run_at": "document_idle"
      }
    ]
  }